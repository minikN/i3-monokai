yellow = ${xrdb:*.color3:#ffffff}
cyan = ${xrdb:*.color6:#ffffff}
cyan2 = ${xrdb:*.color6:#ffffff}
contrast = ${xrdb:*.contrast:#ffffff}

[bar/left]
