* {

/* These variables get changed automatically through
 * the shell script.
 */
bg: #272821;
grey: #57584f;
grey-dark: #3b3c35;
grey-bright: #6e7066;
fg: #fdfff1;
fg-dark: #919288;
fg-bright: #fefff8;
fg-white: #ffffff;
contrast: #57584f;
contrast-dark: #1d1e19;
contrast-darker: #161613;
red: #f82570;
yellow: #e4db73;
green: #a6e12d;
purple: #ae81ff;
orange: #fc961f;
cyan: #66d9ee;
accent: #3b3c35;
highlight: bold #e4db73;
font-rofi: "Misc Termsyn 8";
mono-rofi: "Inconsolata 10";

    spacing:                     2;
    separatorcolor:              @grey;

    foreground:                  @fg;
    background:                  @grey-dark;

    normal-foreground:           @fg-dark;
    normal-background:           @grey-dark;
    alternate-normal-foreground: @fg-dark;
    alternate-normal-background: @grey-dark;
    selected-normal-foreground:  @foreground;
    selected-normal-background:  @grey;

    active-foreground:           @fg-dark;
    active-background:           @grey-dark;
    alternate-active-foreground: @fg-dark;
    alternate-active-background: @grey-dark;
    selected-active-foreground:  @foreground;
    selected-active-background:  @grey;

    urgent-foreground:           @red;
    urgent-background:           @grey-dark;
    selected-urgent-foreground:  @red;
    selected-urgent-background:  @grey;
    alternate-urgent-foreground: @red;
    alternate-urgent-background: @grey-dark;

    background-color:            @grey-dark;
    bordercolor:                 @grey;
    border-color:                @bordercolor;
}

#window {
    background-color: @background;
    border-radius: 2px;
    width:        500px;
    border:           1;
    padding:          5;
}
#mainbox {
    border:  0;
    padding: 5;
}
#message {
    border:       2px 0px 0px ;
    border-color: @separatorcolor;
    padding:      1px ;
}
#textbox {
    text-color: @foreground;
}
#listview {
    fixed-height: 0;
    border:       1px 0px 0px ;
    border-color: @separatorcolor;
    spacing:      2px ;
    scrollbar:    true;
    padding:      4px 0px 0px ;
}
#element {
    font: @font-rofi;
    border:  0;
    padding: 6px;
}
#element.normal.normal {
    background-color: @normal-background;
    text-color:       @normal-foreground;
}
#element.normal.urgent {
    background-color: @urgent-background;
    text-color:       @urgent-foreground;
}
#element.normal.active {
    background-color: @active-background;
    text-color:       @active-foreground;
}
#element.selected.normal {
    background-color: @selected-normal-background;
    text-color:       @selected-normal-foreground;
}
#element.selected.urgent {
    background-color: @selected-urgent-background;
    text-color:       @selected-urgent-foreground;
}
#element.selected.active {
    background-color: @selected-active-background;
    text-color:       @selected-active-foreground;
}
#element.alternate.normal {
    background-color: @alternate-normal-background;
    text-color:       @alternate-normal-foreground;
}
#element.alternate.urgent {
    background-color: @alternate-urgent-background;
    text-color:       @alternate-urgent-foreground;
}
#element.alternate.active {
    background-color: @alternate-active-background;
    text-color:       @alternate-active-foreground;
}
#scrollbar {
    width:        4px ;
    border:       0;
    handle-width: 8px ;
    padding:      0;
}
#sidebar {
    border:       2px 0px 0px ;
    border-color: @separatorcolor;
}
#button.selected {
    background-color: @selected-normal-background;
    text-color:       @selected-normal-foreground;
}
#inputbar {
    spacing:    0;
    text-color: @normal-foreground;
    padding:    10px;
}
#case-indicator {
    spacing:    0;
    text-color: @normal-foreground;
}
#entry {
    font: @font-rofi;
    spacing:    0;
    text-color: @foreground;
}
#prompt {
    font: @font-rofi;
    spacing:    0;
    text-color: @foreground;
}
#inputbar {
    children:   [ prompt,textbox-prompt-colon,entry,case-indicator ];
}
#textbox-prompt-colon {
    expand:     false;
    str:        ":";
    margin:     0px 0.3em 0em 0em ;
    text-color: @foreground;
}